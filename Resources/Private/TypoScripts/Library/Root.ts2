
/**
 * Root TypoScript template for the T3UG Neos Demo Site
 */
page = Page {
	head {
		stylesheets = TYPO3.TypoScript:Template
		stylesheets {
			templatePath = 'resource://T3UG.Neos/Private/Templates/Page/Default.html'
			sectionName = 'stylesheets'
		}

		scripts = TYPO3.TypoScript:Template
		scripts {
			templatePath = 'resource://T3UG.Neos/Private/Templates/Page/Default.html'
			sectionName = 'scripts'
		}
	}

	body {
		templatePath = 'resource://T3UG.Neos/Private/Templates/Page/Default.html'
		sectionName = 'body'
		parts {
			menu = Menu
			breadcrumb =  Breadcrumb
		}
			// These are your content areas, you can define as many as you want, just name them and the nodePath.
		content {
			main = ContentCollection
			main.nodePath = 'main'
		}
	}
}